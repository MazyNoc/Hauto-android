<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="data"
            type="nu.annat.autohome.api.SwitchUnit"/>

        <variable
            name="handler"
            type="nu.annat.autohome.SwitchViewHolder"/>
    </data>

    <nu.annat.autohome.AspectRatioFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:addStatesFromChildren="true"
        android:background="@color/windowBackground"
        android:stateListAnimator="@drawable/test"
        >

        <!--<android.support.constraint.ConstraintLayout-->
        <!--android:id="@+id/constraintLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin="@dimen/item_padding_half"-->
        <!--android:background="@{data.on ? @color/switchOn : @color/switchOff}"-->
        <!--android:onClick="@{(view)->handler.toggle()}"-->
        <!--android:orientation="vertical">-->

        <nu.annat.autohome.ui.RippleCard
            android:id="@+id/ripple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stateListAnimator="@drawable/scale"
            app:image="@{data.image}">

        </nu.annat.autohome.ui.RippleCard>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/gradient"
            android:gravity="center"
            android:paddingTop="18dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@{data.name}"
            android:textColor="@android:color/white"
            tools:text="mums"
            />
        <!--</android.support.constraint.ConstraintLayout>-->
    </nu.annat.autohome.AspectRatioFrameLayout>
</layout>
